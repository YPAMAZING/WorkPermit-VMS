// Work Permit System Database Schema
// Using MySQL for production

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(uuid()) @db.VarChar(36)
  email           String          @unique @db.VarChar(255)
  password        String          @db.VarChar(255)
  firstName       String          @db.VarChar(100)
  lastName        String          @db.VarChar(100)
  roleId          String?         @db.VarChar(36)
  department      String?         @db.VarChar(100)
  phone           String?         @db.VarChar(20)
  profilePicture  String?         @db.Text
  isActive        Boolean         @default(true)
  isApproved      Boolean         @default(false)
  requestedRole   String?         @db.VarChar(50)
  approvedBy      String?         @db.VarChar(36)
  approvedAt      DateTime?
  rejectionReason String?         @db.Text
  
  // VMS Integration fields
  companyName     String?         @db.VarChar(255)  // Company name for tenant users (REQUESTOR)
  hasVMSAccess    Boolean         @default(false)   // Can access VMS dashboard
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  role            Role?           @relation(fields: [roleId], references: [id])
  permitRequests  PermitRequest[]
  
  @@index([email])
  @@index([roleId])
  @@index([companyName])
  @@map("users")
}

model Role {
  id          String   @id @default(uuid()) @db.VarChar(36)
  name        String   @unique @db.VarChar(50)
  displayName String   @db.VarChar(100)
  description String?  @db.Text
  permissions String?  @db.Text
  uiConfig    String?  @db.Text
  isSystem    Boolean  @default(false)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
  
  @@map("roles")
}

model Permission {
  id          String   @id @default(uuid()) @db.VarChar(36)
  key         String   @unique @db.VarChar(100)
  name        String   @db.VarChar(100)
  description String?  @db.Text
  module      String   @db.VarChar(50)
  action      String   @db.VarChar(50)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  @@index([module])
  @@map("permissions")
}

model PermitRequest {
  id               String    @id @default(uuid()) @db.VarChar(36)
  permitNumber     String    @unique @db.VarChar(50)
  title            String    @db.VarChar(255)
  description      String    @db.Text
  location         String    @db.VarChar(255)
  workType         String    @db.VarChar(100)
  startDate        DateTime
  endDate          DateTime
  status           String    @default("PENDING") @db.VarChar(20)
  priority         String    @default("MEDIUM") @db.VarChar(20)
  hazards          String?   @db.Text
  precautions      String?   @db.Text
  equipment        String?   @db.Text
  measures         String?   @db.Text
  workers          String?   @db.Text
  vendorDetails    String?   @db.Text
  contractorName   String?   @db.VarChar(255)
  contractorPhone  String?   @db.VarChar(20)
  companyName      String?   @db.VarChar(255)
  companyLogo      String?   @db.Text
  timezone         String    @default("UTC") @db.VarChar(50)
  isExtended       Boolean   @default(false)
  extendedUntil    DateTime?
  closedAt         DateTime?
  closureChecklist String?   @db.Text
  safetyRemarks    String?   @db.Text
  remarksAddedBy   String?   @db.VarChar(36)
  remarksAddedAt   DateTime?
  autoClosedAt     DateTime?
  createdBy        String    @db.VarChar(36)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  user          User                  @relation(fields: [createdBy], references: [id])
  approvals     PermitApproval[]
  actionHistory PermitActionHistory[]
  
  @@index([status])
  @@index([createdBy])
  @@index([startDate, endDate])
  @@map("permit_requests")
}

model PermitApproval {
  id           String    @id @default(uuid()) @db.VarChar(36)
  permitId     String    @db.VarChar(36)
  approverName String?   @db.VarChar(255)
  approverRole String    @default("FIREMAN") @db.VarChar(50)
  decision     String    @default("PENDING") @db.VarChar(20)
  comment      String?   @db.Text
  signature    String?   @db.LongText
  signedAt     DateTime?
  approvedAt   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  permit       PermitRequest @relation(fields: [permitId], references: [id], onDelete: Cascade)
  
  @@index([permitId])
  @@index([decision])
  @@map("permit_approvals")
}

model PermitActionHistory {
  id              String   @id @default(uuid()) @db.VarChar(36)
  permitId        String   @db.VarChar(36)
  action          String   @db.VarChar(50)
  performedBy     String?  @db.VarChar(36)
  performedByName String?  @db.VarChar(255)
  performedByRole String?  @db.VarChar(50)
  comment         String?  @db.Text
  previousStatus  String?  @db.VarChar(20)
  newStatus       String?  @db.VarChar(20)
  signature       String?  @db.LongText
  createdAt       DateTime @default(now())
  
  permit          PermitRequest @relation(fields: [permitId], references: [id], onDelete: Cascade)
  
  @@index([permitId])
  @@index([action])
  @@map("permit_action_history")
}

model Worker {
  id          String   @id @default(uuid()) @db.VarChar(36)
  name        String   @db.VarChar(255)
  phone       String?  @db.VarChar(20)
  email       String?  @db.VarChar(255)
  company     String?  @db.VarChar(255)
  trade       String?  @db.VarChar(100)
  badgeNumber String?  @db.VarChar(50)
  photo       String?  @db.LongText
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([phone])
  @@index([badgeNumber])
  @@map("workers")
}

model AuditLog {
  id        String   @id @default(uuid()) @db.VarChar(36)
  userId    String?  @db.VarChar(36)
  action    String   @db.VarChar(100)
  entity    String   @db.VarChar(100)
  entityId  String?  @db.VarChar(36)
  oldValue  String?  @db.LongText
  newValue  String?  @db.LongText
  ipAddress String?  @db.VarChar(45)
  userAgent String?  @db.Text
  createdAt DateTime @default(now())
  
  @@index([entity, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}

model SystemSettings {
  id          String   @id @default(uuid()) @db.VarChar(36)
  key         String   @unique @db.VarChar(100)
  value       String   @db.Text
  description String?  @db.Text
  updatedAt   DateTime @updatedAt
  
  @@map("system_settings")
}

model SSOToken {
  id             String   @id @default(uuid()) @db.VarChar(36)
  token          String   @unique @db.VarChar(255)
  userId         String   @db.VarChar(36)
  externalUserId String?  @db.VarChar(36)
  externalSystem String   @default("VMS") @db.VarChar(50)
  expiresAt      DateTime
  isUsed         Boolean  @default(false)
  createdAt      DateTime @default(now())
  
  @@index([token])
  @@index([expiresAt])
  @@map("sso_tokens")
}

model AnalyticsCache {
  id          String   @id @default(uuid()) @db.VarChar(36)
  reportType  String   @db.VarChar(50)
  reportName  String   @db.VarChar(255)
  data        String   @db.LongText
  filters     String?  @db.Text
  generatedAt DateTime @default(now())
  expiresAt   DateTime
  createdBy   String?  @db.VarChar(36)
  
  @@index([reportType])
  @@index([expiresAt])
  @@map("analytics_cache")
}

// ==========================================
// VMS (Visitor Management System) Models
// ==========================================

// VMS Users - Completely separate from Work Permit users
// These are VMS-specific users (security guards, receptionists, etc.)
model VMSUser {
  id              String    @id @default(uuid()) @db.VarChar(36)
  email           String    @unique @db.VarChar(255)
  password        String    @db.VarChar(255)
  firstName       String    @db.VarChar(100)
  lastName        String    @db.VarChar(100)
  phone           String?   @db.VarChar(20)
  profilePicture  String?   @db.Text
  department      String?   @db.VarChar(100)
  
  // VMS Role
  vmsRoleId       String?   @db.VarChar(36)
  vmsRole         VMSRole?  @relation(fields: [vmsRoleId], references: [id])
  
  // Company assignment (for multi-tenant)
  companyId       String?   @db.VarChar(36)
  company         VMSCompany? @relation(fields: [companyId], references: [id])
  
  // Status
  isActive        Boolean   @default(true)
  isApproved      Boolean   @default(true)
  
  // For Work Permit admin SSO - links to Work Permit user if this is an admin
  workPermitUserId String?  @unique @db.VarChar(36)
  isFromWorkPermit Boolean  @default(false)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([email])
  @@index([companyId])
  @@index([workPermitUserId])
  @@map("vms_users")
}

// VMS Roles - Separate from Work Permit roles
model VMSRole {
  id          String    @id @default(uuid()) @db.VarChar(36)
  name        String    @unique @db.VarChar(50)
  displayName String    @db.VarChar(100)
  description String?   @db.Text
  permissions String?   @db.LongText  // JSON array of VMS permissions - LONGTEXT for large permission arrays
  isSystem    Boolean   @default(false)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  users       VMSUser[]
  
  @@map("vms_roles")
}

model VMSCompany {
  id                  String   @id @default(uuid()) @db.VarChar(36)
  name                String   @unique @db.VarChar(255)
  displayName         String   @db.VarChar(255)
  description         String?  @db.Text
  logo                String?  @db.LongText
  contactPerson       String?  @db.VarChar(255)
  contactEmail        String?  @db.VarChar(255)
  contactPhone        String?  @db.VarChar(20)
  address             String?  @db.Text
  
  // Approval Settings - Default is OFF (auto-approve enabled)
  requireApproval     Boolean  @default(false) // If false, visitors can directly get gatepass without approval
  autoApproveVisitors Boolean  @default(true)  // If true, visitors are auto-approved
  
  // Notification Settings
  notifyOnVisitor     Boolean  @default(true)
  notificationEmails  String?  @db.Text  // JSON array of emails
  
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  visitors            VMSVisitor[]
  gatepasses          VMSGatepass[]
  users               VMSUser[]
  companyUsers        VMSCompanyUser[]
  
  @@index([name])
  @@map("vms_companies")
}

// VMSCompanyUser is no longer needed - VMSUser has companyId directly
// Keeping for backward compatibility but can be removed

model VMSCompanyUser {
  id          String   @id @default(uuid()) @db.VarChar(36)
  userId      String   @db.VarChar(36)  // Reference to main User table
  companyId   String   @db.VarChar(36)
  role        String   @default("VIEWER") @db.VarChar(50)  // ADMIN, APPROVER, VIEWER
  canApprove  Boolean  @default(false)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  company     VMSCompany @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  @@unique([userId, companyId])
  @@index([userId])
  @@index([companyId])
  @@map("vms_company_users")
}

model VMSVisitor {
  id              String   @id @default(uuid()) @db.VarChar(36)
  visitorName     String   @db.VarChar(255)
  phone           String   @db.VarChar(20)
  email           String?  @db.VarChar(255)
  companyFrom     String?  @db.VarChar(255)
  companyToVisit  String   @db.VarChar(255)  // Company name from dropdown
  companyId       String?  @db.VarChar(36)   // Reference to VMSCompany if exists
  personToMeet    String?  @db.VarChar(255)
  purpose         String   @db.VarChar(100)
  idProofType     String   @default("NONE") @db.VarChar(50)
  idProofNumber   String   @default("") @db.VarChar(100)
  idDocumentImage String?  @db.LongText
  photo           String?  @db.LongText
  vehicleNumber   String?  @db.VarChar(50)
  numberOfVisitors Int     @default(1)
  
  // Status
  status          String   @default("PENDING") @db.VarChar(20)  // PENDING, APPROVED, REJECTED, CHECKED_IN, CHECKED_OUT
  approvedBy      String?  @db.VarChar(36)
  approvedAt      DateTime?
  rejectionReason String?  @db.Text
  
  // Check-in/out
  checkInTime     DateTime?
  checkOutTime    DateTime?
  
  // Entry type
  entryType       String   @default("WALK_IN") @db.VarChar(20)  // WALK_IN, PRE_APPROVED
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  company         VMSCompany? @relation(fields: [companyId], references: [id])
  gatepass        VMSGatepass?
  
  @@index([phone])
  @@index([companyId])
  @@index([status])
  @@index([createdAt])
  @@map("vms_visitors")
}

model VMSGatepass {
  id              String   @id @default(uuid()) @db.VarChar(36)
  gatepassNumber  String   @unique @db.VarChar(50)
  visitorId       String   @unique @db.VarChar(36)
  companyId       String?  @db.VarChar(36)
  
  validFrom       DateTime @default(now())
  validUntil      DateTime
  
  // Status
  status          String   @default("ACTIVE") @db.VarChar(20)  // ACTIVE, USED, EXPIRED, CANCELLED
  usedAt          DateTime?
  cancelledAt     DateTime?
  cancelledBy     String?  @db.VarChar(36)
  cancellationReason String? @db.Text
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  visitor         VMSVisitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
  company         VMSCompany? @relation(fields: [companyId], references: [id])
  
  @@index([gatepassNumber])
  @@index([companyId])
  @@index([status])
  @@map("vms_gatepasses")
}

model VMSPreApproval {
  id              String   @id @default(uuid()) @db.VarChar(36)
  visitorName     String   @db.VarChar(255)
  phone           String   @db.VarChar(20)
  email           String?  @db.VarChar(255)
  companyFrom     String?  @db.VarChar(255)
  companyId       String   @db.VarChar(36)
  personToMeet    String?  @db.VarChar(255)
  purpose         String   @db.VarChar(100)
  
  validFrom       DateTime
  validUntil      DateTime
  
  // Created by company user
  createdBy       String   @db.VarChar(36)
  
  // Status
  status          String   @default("ACTIVE") @db.VarChar(20)  // ACTIVE, USED, EXPIRED, CANCELLED
  usedAt          DateTime?
  
  // Sharing
  sharedVia       String?  @db.VarChar(50)  // WHATSAPP, EMAIL, SMS
  sharedAt        DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([companyId])
  @@index([phone])
  @@index([status])
  @@map("vms_pre_approvals")
}

model VMSBlacklist {
  id              String   @id @default(uuid()) @db.VarChar(36)
  visitorName     String   @db.VarChar(255)
  phone           String   @db.VarChar(20)
  email           String?  @db.VarChar(255)
  idType          String?  @db.VarChar(50)
  idNumber        String?  @db.VarChar(100)
  
  reason          String   @db.VarChar(50)   // MISCONDUCT, THEFT, VIOLENCE, FRAUD, etc.
  description     String?  @db.Text
  
  isActive        Boolean  @default(true)
  isPermanent     Boolean  @default(true)
  expiresAt       DateTime?
  
  // Removal info
  removedAt       DateTime?
  removedBy       String?  @db.VarChar(36)
  removalReason   String?  @db.Text
  
  addedBy         String   @db.VarChar(36)
  visitorId       String?  @db.VarChar(36)   // Link to visitor if exists
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([phone])
  @@index([isActive])
  @@index([reason])
  @@map("vms_blacklist")
}
