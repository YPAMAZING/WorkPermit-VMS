{
  "name": "workpermit-vms-backend",
  "version": "2.0.0",
  "description": "Work Permit & VMS (Visitor Management System) Backend - MySQL Edition",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    
    "prisma:generate": "prisma generate && prisma generate --schema=prisma-vms/schema.prisma",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "node prisma/seed.js",
    "prisma:reset": "prisma db push --force-reset && node prisma/seed.js",
    "prisma:studio": "prisma studio",
    
    "vms:generate": "prisma generate --schema=prisma-vms/schema.prisma",
    "vms:push": "prisma db push --schema=prisma-vms/schema.prisma",
    "vms:seed": "node prisma-vms/seed.js",
    "vms:reset": "prisma db push --force-reset --schema=prisma-vms/schema.prisma && node prisma-vms/seed.js",
    "vms:studio": "prisma studio --schema=prisma-vms/schema.prisma",
    "vms:setup": "npm run vms:push && npm run vms:seed",
    
    "db:setup": "npm run prisma:push && npm run prisma:seed && npm run vms:push && npm run vms:seed",
    "db:generate": "npm run prisma:generate",
    "db:reset:all": "npm run prisma:reset && npm run vms:reset"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "nodemailer": "^7.0.12",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0"
  }
}
