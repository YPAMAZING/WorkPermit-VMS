# ================================
# Work Permit & VMS Backend Configuration
# ================================

# Server
PORT=5000
NODE_ENV=development

# ================================
# MySQL Database Configuration
# ================================

# Work Permit Database
DATABASE_URL=mysql://username:password@localhost:3306/workpermit_db

# VMS Database (Separate)
VMS_DATABASE_URL=mysql://username:password@localhost:3306/vms_db

# ================================
# JWT Authentication
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ================================
# Frontend URL (for CORS)
# ================================
FRONTEND_URL=http://localhost:3000

